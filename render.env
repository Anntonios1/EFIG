# ===================================
# CONFIGURACIÓN N8N PARA RENDER
# ===================================

# === CONFIGURACIÓN BÁSICA ===
NODE_ENV=production
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=https
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# === URLs Y WEBHOOKS ===
WEBHOOK_URL=https://efig.onrender.com
N8N_EDITOR_BASE_URL=https://efig.onrender.com

# === AUTENTICACIÓN ===
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=n8npass

# === CONFIGURACIÓN DE SEGURIDAD ===
N8N_SECURE_COOKIE=true
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true

# === BASE DE DATOS POSTGRESQL (GCP) ===
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=34.66.86.207
DB_POSTGRESDB_PORT=5433
DB_POSTGRESDB_DATABASE=n8n_db
DB_POSTGRESDB_USER=n8n_user
DB_POSTGRESDB_PASSWORD=n8npass
DB_POSTGRESDB_SSL_ENABLED=true
DB_POSTGRESDB_SSL_REJECT_UNAUTHORIZED=false

# === CONFIGURACIÓN DE TIMEZONE ===
TZ=America/Bogota
GENERIC_TIMEZONE=America/Bogota

# === CONFIGURACIÓN DE EJECUCIÓN ===
EXECUTIONS_PROCESS=main
EXECUTIONS_TIMEOUT=3600
EXECUTIONS_TIMEOUT_MAX=7200

# === CONFIGURACIÓN DE MEMORIA ===
NODE_OPTIONS=--max-old-space-size=1024